package zoo;

public class Animal {
	String name;
	String gender;
	int age;

	public Animal() {
	}
	
	public Animal(String name) {
		this.name = name;
	}

	void eat() {
		System.out.println(name + "이(가) 밥 먹는 중");
	}
	
	void sleep() {
		System.out.println(name + "이(가) 잠자는 중");
	}
	
	void move() {
		System.out.println(name + "이(가) 움직이는 중");
	}
	
	void makeSound() {
		System.out.println(name + "이(가) 소리내는 중");
	}

	void crying() {
		System.out.println(this.name + "의 울음소리는");
	}
	
}
