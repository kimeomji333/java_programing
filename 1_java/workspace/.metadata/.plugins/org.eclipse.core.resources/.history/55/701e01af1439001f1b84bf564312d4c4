package study;

import java.util.Scanner;

//별과 숫자 출력
public class StarPrintToN {
   public static void main(String[] args) {
	   
      Scanner sc = new Scanner(System.in);
      System.out.print("정수 : ");
      int n = sc.nextInt();
      
      if (n > 0) {
         for (int i = 0; i < n; i++) {
            for (int j = i-1; j < 2*i-1; j++) {
               System.out.print("*");
            }
            System.out.println(i+1);
         }
      }
      else {
         System.out.println("양수가 아닙니다.");
      }
   }
}
