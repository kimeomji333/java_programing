public class MainView {
	public MainView() {
		Scanner sc = new Scanner(System.in);
		int money = 0;
		Bank session = BankManager.session; //변수에 담아놈
		
		while(true) {
			System.out.println("1. 입금하기\n2. 출금하기\n3. 잔액보기\n4. 로그아웃");
			int choice = sc.nextInt();
			if(choice == 4) {
				System.out.println("다음에 다시 만나요.");
				break;
			}
		}
	}
}
