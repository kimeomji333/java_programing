package day04;

//2
public class NestedForEx {
	public static void main(String[] args) {
		// 이중for문 예제 - 별 찍기
		
		/*
		 	*****	
		 	*****	
		 	*****	
		 	*****	
		 	*****	
		 */
		
		for(int i = 0; i < 5; i++) {
			System.out.println("*****");
		}
		System.out.println("------------");
		
		
		
		
		
		
		
		/*
		 		*
		 		**
		 		***
		 		****
		 		*****
		 */
		for(int i = 0; i < 5; i++) {
			for(int j = 0; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("------------");
		
		
		
		
		
		
		/*
		 		*****
		 		****
		 		***
		 		**
		 		*
		 */
		for(int i = 5; i >= 1; i--) {
			for(int j = 1; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("------------");
		
		
		
		
		
		
		/*
		 			*
		 		   ***
		 		  *****
		 		 *******
		 		*********
		 */
		// 공백: 4 3 2 1 0
		// 별: 1 3 5 7 9 // 홀수 개수 만큼(O) or 2개씩 증가(X)
		for(int i = 1; i <= 5; i++) {	
			for(int k = 1; k <= 5 - i; k++) {
				System.out.print(" ");
			}
				
			for(int j = 1; j <= i*2 -1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("------------");
		
		
		
		
		
		/*
		 		*********
		 		 *******
		 	      *****
		 	       ***
		 		    *
		 */
		//공백: 0 1 2 3 4
		//*: 9 7 5 3 1
		for(int i = 5; i >= 1; i--) {	
			for(int k = 0; k >= 5 - i; k++) {
				System.out.print(" ");
			}
				
			for(int j = 5; j >= i*2 -1; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("------------");
		
		
		
		
		
		
		/*
		  	국어점수 학생용으로 만들기
		 	학생수 입력 -> 과목수, 과목명 입력 받기 -> 첫 번째 학생 ~ n 번째 학생까지의 점수 입력받기
		 	한 사람당 총점, 평균/ 전체 평균
		 	각 과목별 평균
		 */
		
		
		
		
		
		
		
		
		
	}
}
