package day05;

public class ClassTest {
	public static void main(String[] args) {
		Car mycar = new Car(); // 객체화
		System.out.println(mycar); // 
		mycar.model = "Ferrari"; // 
		mycar.color = "Red";
		mycar.price = 70000;
		System.out.println(mycar.model);
	}
}

class Car {
	// 자동차의 기능, 성질, 속성(공통되게 하나의 값으로 표현이 가능함) // 바퀴의 개수, 엔진의 키고 끔, 출시연도, 종류
	
	// 속성, 성징들을 변수로 선언
	String carNum;
	String model;
	String color;
	int price;
	
	// 기능 행위들은 메소드로 선언
	void engineStart() {
		System.out.println("시동 켜기");
	}
	
	void engineStop() {
		System.out.println("시동 끄기");
		
	}
	
}
