package day04;

import java.util.Scanner;

//3 이중for문 예제 - 별 찍기 접근방법
public class NestedForEx2 {
	public static void main(String[] args) {
				
		// 직각삼각형
//		for(int j = 1; j <= 1; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 2; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 3; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 4; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 5; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		
//		// 이중 for문 이용하기
//		for(int i = 1; i <= 5; i++) {
//			for(int j = 1; j <= i; j++) {
//				System.out.print("*");			
//			}
//			System.out.println();
//		}
		
		
		// 역직삼각형
//		for(int j = 1; j <= 5; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 4; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//
//		for(int j = 1; j <= 3; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 2; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
//		
//		for(int j = 1; j <= 1; j++) {
//			System.out.print("*");
//		}
//		System.out.println();
		

		// 학생수, 과목수, 과목명 입력 받아 총점와 평균 내기
		Scanner sc = new Scanner(System.in);
		System.out.println("학생수: ");
		int stuCnt = sc.nextInt();
		System.out.println("과목수: ");
		int subCnt = sc.nextInt();
		
		String[] arrSubject = new String[subCnt];
		for (int i = 0; i < subCnt; i++) {
			arrSubject[i] = sc.next();
		}
		
		// 학생별, 과목별 총점
		int[] arrSumStu = new int[stuCnt];
		int[] arrSumSub = new int[subCnt];
		int[][] arrScore = new int[stuCnt][subCnt];
		
		for (int i = 0; i < stuCnt; i++) {
			for (int j = 0; j < subCnt; j++) {
				System.out.println((i+1) + "번 학생의 " + arrSubject[j] + "점수: ");
				arrScore[i][j] = sc.nextInt();
				arrSumStu[i] += arrScore[i][j];
				arrSumSub[j] += arrScore[i][j];
			}
		}
		
		
	}
}
